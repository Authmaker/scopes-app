<div class="frame">
  <div class="oauth-scopes-nav">
    <ul class="nav-tabs nav-justified text-center">
      <li class="complete">
        {{#link-to "plans"}}
          <i class="fa fa-check fa-2x"></i>
          <h4 class="spacing-bottom0">Plans</h4>
        {{/link-to}}
      </li>
      <li class="complete">
        {{#link-to "plans.cart" model.plan}}
          <i class="fa fa-check fa-2x"></i>
          <h4 class="spacing-bottom0">Cart</h4>
        {{/link-to}}
      </li>
      <li class="active">
        <span>
          <i class="fa fa-credit-card fa-2x"></i>
          <h4 class="spacing-bottom0">Payment</h4>
        </span>
      </li>
    </ul>
  </div>
  <div class="pad4">
    <div class="spacing-bottom-4 text-center">
      <h2>Complete your payment!</h2>
    </div>
    <ul>
    {{#each model.cards as |card|}}
      <li>{{#radio-button
        value=card.id
        groupValue=cardGroup
        changed="cardChanged"}}
        xxxx-xxxx-xxxx-{{card.last4}} <i class="fa fa-cc-{{card.logo}}"></i> - {{card.exp_month}}/{{card.exp_year}}
        {{#if card.default}}
          <strong>default</strong>
        {{/if}}
      {{/radio-button}}</li>
    {{/each}}
    <li>{{#radio-button
      value="newCard"
      groupValue=cardGroup
      changed="cardChanged"}}
      Use new card
    {{/radio-button}}</li>
  </ul>
    <div class="scope-content">
      {{stripe-checkout
        class="btn btn-primary"
        image="/logo.svg"
        name="AuthMaker"
        description=model.plan.stripePlan.name
        amount=model.plan.stripePlan.amount
        currency=model.plan.stripePlan.currency
        label="Pay with new card"
        panelLabel="Make payment"
        isDisabled=payButtonDisabled
        action="processStripeToken"
      }}
      <div class="alertbox form-group"></div>
      <span class="payment-errors"></span>
      <div class="alert alert-info text-small"></div>
    </div>
  </div>
</div>
