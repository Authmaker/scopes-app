<div class="frame">
  <div class="oauth-scopes-nav">
    <ul class="nav-tabs nav-justified text-center">
      <li class="complete">
        {{#link-to "plans"}}
          <i class="fa fa-check fa-2x"></i>
          <h4 class="spacing-bottom0">Plans</h4>
        {{/link-to}}
      </li>
      <li class="active">
        <span>
          <i class="fa fa-lock fa-2x"></i>
          <h4 class="spacing-bottom0">Auth</h4>
        </span>
      </li>
      <li>
        <span>
          <i class="fa fa-shopping-cart fa-2x"></i>
          <h4 class="spacing-bottom0">Cart</h4>
        </span>
      </li>
      <li>
        <span>
          <i class="fa fa-credit-card fa-2x"></i>
          <h4 class="spacing-bottom0">Payment</h4>
        </span>
      </li>
    </ul>
  </div>
  <div class="pad4">
    <div class="spacing-bottom4 text-center">
      <h2>Allow {{oauthClient.name}} access</h2>
      <p>{{oauthClient.name}} would like access to the following features of your Blooie account:</p>
    </div>
    <div class="scope-content">
      <table class="table">
        <thead>
          <tr>
            <th>Permission</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          {{#each content.permissions}}
          <tr>
            <td><h4>{{name}}</h4></td>
            <td><h4>{{description}}</h4></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="frame-footer">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-8">
        <button class="btn green large block" {{action 'acceptPermissions'}}>Allow</button>
      </div>
    </div>
  </div>
</div>
